<h1>Tool Library</h1>

<% if @admin %>
  <%= link_to "Add Tool", new_tool_path, class: "btn btn-success" %>
<% end %>

<table class="table tools">
  <% @tools.each do |tool| %>
    <tr>
      <td><%= image_tag tool.image_url, class: "tool-img" %></td>
      <td><%= tool.name %></td>
      <td>
        <% if current_user.nil?  %>
          <span class="green">Sign-up or sign-in to borrow tools!</span>
        <% elsif tool.checked_out_by?(current_user) %>
          <%= button_to "Return", tool_path(tool.id), method: :patch, class: "btn btn-danger" %>
          <!-- label + tool = keys for the partial -->
        <% elsif tool.unavailable? %>
          <span class="red">Not Available</span>
        <% else %>
          <%= button_to "Borrow", tool_path(tool.id), method: :patch, class: "btn btn-info" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
